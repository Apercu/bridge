{
  "apps": [{

    "name"  : "Bridge API",
    "script": "bin/api.js",

    "env_production": {
      NODE_ENV: "production"
    }

  }],

  "deploy": {
    "production": {
      "user"       : "pm2",
      "host"       : "fugitive.link",
      "ref"        : "origin/develop",
      "repo"       : "git@github.com:Sigsev/Bridge.git",
      "path"       : "/var/www/bridge",
      "post-deploy": "npm install && pm2 startOrRestart ecosystem.json --env production"
    }
  }
}
