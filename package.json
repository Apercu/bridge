{
  "name": "Bridge",
  "version": "3.12.0",
  "description": "New tab. For devs. F*ck you.",
  "license": "DWTFYW",
  "repository": {
    "type": "git",
    "url": "git://github.com/Sigsev/Bridge.git"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "start": "babel-node bin/start",
    "build": "npm run clean && NODE_ENV=production babel-node bin/build && cp templates/manifest.json dist && zip -r dist.zip dist/",
    "lint": "eslint src api bin webpack config",
    "server": "node bin/api",
    "pm2:setup": "pm2 deploy ecosystem.json production setup",
    "pm2:deploy": "pm2 deploy ecosystem.json production",
    "deploy": "npm run lint && npm run pm2:deploy"
  },
  "dependencies": {
    "body-parser": "^1.15.1",
    "cheerio": "^0.20.0",
    "classnames": "^2.2.5",
    "dotenv": "^2.0.0",
    "express": "^4.13.4",
    "got": "^6.3.0",
    "gsap": "^1.18.5",
    "lodash": "^4.13.1",
    "memory-cache": "^0.1.5",
    "moment": "^2.13.0",
    "morgan": "^1.8.1",
    "node-sass": "^3.7.0",
    "q": "^1.4.1",
    "react": "^15.1.0",
    "react-dnd": "^2.1.4",
    "react-dnd-html5-backend": "^2.1.2",
    "react-dom": "^15.1.0",
    "react-portal": "^3.0.0",
    "react-redux": "^4.4.5",
    "react-select": "^1.0.0-beta13",
    "react-skycons": "^0.3.0",
    "redux": "^3.5.2",
    "redux-actions": "^0.9.1",
    "redux-thunk": "^2.1.0",
    "shortid": "^2.2.6",
    "whatwg-fetch": "^1.0.0"
  },
  "devDependencies": {
    "autoprefixer-loader": "^3.2.0",
    "babel-cli": "^6.9.0",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "css-loader": "^0.23.1",
    "eslint": "^2.11.1",
    "eslint-config-zavatta": "^3.0.2",
    "eslint-config-zavatta-react": "^1.2.3",
    "eslint-plugin-react": "^5.1.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "html-webpack-plugin": "^2.19.0",
    "json-loader": "^0.5.4",
    "pm2": "^1.1.3",
    "react-hot-loader": "next",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "babel": {
    "presets": [
      "react",
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "transform-decorators-legacy",
      "react-hot-loader/babel"
    ]
  },
  "eslintConfig": {
    "extends": [
      "zavatta",
      "zavatta-react"
    ],
    "rules": {
      "react/jsx-max-props-per-line": [
        2,
        {
          "maximum": 3
        }
      ],
      "arrow-parens": 0,
      "no-inline-comments": 0,
      "semi": [
        2,
        "never"
      ],
      "strict": [
        2,
        "never"
      ],
      "comma-dangle": 0,
      "no-undefined": 0
    },
    "globals": {
      "TimelineMax": false,
      "chrome": false
    }
  }
}
